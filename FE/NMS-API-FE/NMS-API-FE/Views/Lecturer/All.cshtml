@model IEnumerable<NewsArticleViewModel>

@{
    ViewData["Title"] = "All News";
    Layout = "~/Views/Shared/_LayoutLecturer.cshtml";
}

<style>
    /* Style adjustments for 3-column layout */

    :root {
        --article-column-gap: 20px; /* Space between columns */
        --article-card-padding: 15px; /* Padding inside each article card */
        --article-card-margin-bottom: 20px; /* Margin below each article card */
        --article-card-border-radius: 5px;
    }

    body {
        font-family: sans-serif; /* Or your preferred font */
    }

    h1 {
        text-align: center;
        margin-bottom: 30px;
    }

    .news-grid-container {
        display: flex;
        flex-wrap: wrap; /* Allow articles to wrap to the next row */
        justify-content: space-around; /* Distribute articles evenly */
        margin-left: calc(-1 * var(--article-column-gap) / 2); /* Adjust margin to center grid and account for column gap */
        margin-right: calc(-1 * var(--article-column-gap) / 2);
    }

    .news-article-card {
        width: calc(33.333% - var(--article-column-gap)); /* Roughly 1/3 width minus column gap */
        margin-left: calc(var(--article-column-gap) / 2); /* Half column gap for left and right spacing */
        margin-right: calc(var(--article-column-gap) / 2);
        margin-bottom: var(--article-card-margin-bottom);
        background-color: white;
        border: 1px solid #ddd;
        border-radius: var(--article-card-border-radius);
        padding: var(--article-card-padding);
        box-sizing: border-box; /* Include padding and border in width calculation */
    }

    .news-article-card h3 {
        margin-top: 0;
        margin-bottom: 0.5em;
        font-size: 1.3em;
        line-height: 1.2; /* Tighter line height for titles */
    }

    .news-article-card .headline {
        font-style: italic;
        color: #777;
        margin-bottom: 1em;
        font-size: 1em;
    }

    .news-article-card .meta-info {
        font-size: 0.9em;
        color: #888;
        margin-bottom: 0.7em;
    }

    .news-article-card .article-content {
        margin-bottom: 1em;
        /* Limit content lines if needed */
        /* overflow: hidden;
           text-overflow: ellipsis;
           display: -webkit-box;
           -webkit-line-clamp: 3; /* Number of lines to show */
        /* -webkit-box-orient: vertical; */
    }

    .news-article-card .article-actions {
        text-align: right;
        margin-top: 1em;
    }

    .news-article-card .article-actions a {
        margin-left: 0.5em;
    }

   
</style>

<h1>Latest News</h1>

<div class="news-grid-container">
    @foreach (var item in Model)
    {
        <div class="news-article-card">
            <h3>@item.NewsTitle</h3>
            <p class="headline">@item.Headline</p>
            <p class="meta-info">
                Published on: @item.ModifiedDate.ToString() | Category: @item.Category?.CategoryDescription
            </p>
            <div class="article-content">
                @* Display a limited amount of content - adjust length as needed *@
                @Html.Raw(item.NewsContent.Length > 200 ? item.NewsContent.Substring(0, 50) + "..." : item.NewsContent)
            </div>
            @foreach (var a in item.NewsTags)
            {
                <button type="button" class="btn btn-outline-primary" style="margin-bottom: 10px">@a.Tag.TagName</button>
            }
            <div class="article-actions">
                <a asp-action="Details" asp-controller="Lecturer" asp-route-id="@item.NewsArticleId" class="btn btn-primary btn-sm">Read More</a>
            </div>
        </div>
    }
</div>