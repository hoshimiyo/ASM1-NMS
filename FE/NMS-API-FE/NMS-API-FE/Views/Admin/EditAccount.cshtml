@model NMS_API_FE.DTOs.AccountUpdateAdminDTO

@{
    ViewData["Title"] = "Edit Account";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    /* Styling for Edit System Account Form with Success Announcement - Visual & Stylish Look */

    /* Theme Variables - Consistent with other admin pages */
    :root {
        --primary-color: #0056b3; /* Updated primary color */
        --secondary-color: #6c757d;
        --background-color: #f8f9fa;
        --text-color: #343a40;
        --accent-color: #ffc107;
        --form-card-background: #ffffff;
        --form-card-border: #dee2e6;
        --form-card-border-radius: 8px;
        --form-label-color: var(--secondary-color);
        --form-input-border-color: #ced4da;
        --form-input-focus-border-color: var(--primary-color);
        --form-input-box-shadow-focus: rgba(0, 86, 179, 0.25);
        --form-group-margin-bottom: 20px;
        --form-button-padding: 0.8rem 1.5rem;
        --form-button-font-size: 1.1rem;
        --form-button-border-radius: 0.3rem;
        --success-message-background-color: #e0f7fa; /* Light teal background for success */
        --success-message-border-color: #b2ebf2;
        --success-message-text-color: #00796b; /* Darker teal text for success */
    }

    body {
        background-color: var(--background-color);
        color: var(--text-color);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .edit-account-container {
        max-width: 600px;
        margin: 30px auto;
        padding: 35px;
        background-color: var(--form-card-background);
        border: 1px solid var(--form-card-border);
        border-radius: var(--form-card-border-radius);
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.09); /* Enhanced shadow for depth */
    }

    h1 {
        color: var(--primary-color);
        margin-bottom: 30px;
        text-align: center;
    }

    <h4>Modify System Account Details</h4>
    <hr />

    .form-group {
        margin-bottom: var(--form-group-margin-bottom);
    }

    .form-group label {
        display: block;
        font-weight: bold;
        color: var(--form-label-color);
        margin-bottom: 10px;
    }

    .form-control {
        display: block;
        width: 100%;
        padding: 0.8rem 1rem;
        font-size: 1rem;
        line-height: 1.5;
        color: var(--text-color);
        background-color: #fff;
        background-clip: padding-box;
        border: 1px solid var(--form-input-border-color);
        appearance: none;
        border-radius: 0.3rem;
        transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
    }

    .form-control:focus {
        color: var(--text-color);
        background-color: #fff;
        border-color: var(--form-input-focus-border-color);
        outline: 0;
        box-shadow: 0 0 0 0.25rem var(--form-input-box-shadow-focus);
    }

    .btn-primary {
        padding: var(--form-button-padding);
        font-size: var(--form-button-font-size);
        border-radius: var(--form-button-border-radius);
        background-color: var(--primary-color);
        border-color: var(--primary-color);
        transition: background-color 0.2s ease-in-out, border-color 0.2s ease-in-out; /* Smooth transition */
    }

    .btn-primary:hover {
        background-color: darken(var(--primary-color), 10%);
        border-color: darken(var(--primary-color), 10%);
    }

    .text-danger {
        font-size: 0.9rem;
        margin-top: 5px;
        display: block;
        opacity: 0.9; /* Slightly softer error text */
    }

    .back-to-list {
        display: block;
        margin-top: 25px;
        text-align: center;
    }

    .back-to-list a {
        color: var(--secondary-color);
        text-decoration: none;
        transition: color 0.2s ease;
    }

    .back-to-list a:hover {
        color: darken(var(--secondary-color), 20%);
    }

    .success-announcement { /* Style for success announcement box */
        background-color: var(--success-message-background-color);
        border: 1px solid var(--success-message-border-color);
        color: var(--success-message-text-color);
        padding: 15px 20px;
        border-radius: var(--form-card-border-radius);
        margin-bottom: 25px;
        text-align: center;
        font-weight: bold;
    }
</style>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<div class="edit-account-container">
    <h1>Edit Account</h1>

    <h4>Modify System Account Details</h4>
    <hr />


    <div class="row">
        <div class="col-md-12">
            <form asp-action="EditAccount">

                <div class="form-group">
                    <label asp-for="AccountName" class="control-label">Account Name</label>
                    <input asp-for="AccountName" class="form-control" placeholder="Enter account name" value="@Model?.AccountName" />
                    <span asp-validation-for="AccountName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="AccountEmail" class="control-label">Email Address</label>
                    <input asp-for="AccountEmail" class="form-control" placeholder="Enter email address" value="@Model?.AccountEmail" />
                    <span asp-validation-for="AccountEmail" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="AccountRole" class="control-label">Account Role</label>
                    <select asp-for="AccountRole" class="form-control">
                        <option value="1" >Staff</option>
                        <option value="2" >Lecturer</option>
                    </select>
                    <span asp-validation-for="AccountRole" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password" class="control-label">Password</label>
                    <input asp-for="Password" class="form-control" type="password" placeholder="Leave blank to keep old password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group" style="text-align: center;margin-top: 10px;">
                    <input type="submit" value="Save Changes" class="btn btn-primary" />
                </div>
            </form>
            <p class="back-to-list">
                <a asp-action="ManageAccounts">Back to Account List</a>
            </p>
        </div>
    </div>


</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}